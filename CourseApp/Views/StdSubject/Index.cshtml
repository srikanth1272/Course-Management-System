@model IEnumerable<CourseApp.Models.StdSubject>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RollNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semister)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RollNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Semister)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { RollNo = item.RollNo, SubjectId = item.SubjectId }) |
            @Html.ActionLink("BySemister", "BySemister", new { RollNo = item.RollNo, Semister = item.Semister }) |
            @Html.ActionLink("ByRollNo", "ByRollNo", new { RollNo = item.RollNo }) |
            @Html.ActionLink("Delete", "Delete", new { RollNo = item.RollNo, SubjectId = item.SubjectId })
        </td>
    </tr>
}

</table>
