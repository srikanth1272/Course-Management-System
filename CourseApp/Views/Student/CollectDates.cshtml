@model CourseApp.Models.CollectDates

@{
    ViewBag.Title = "CollectDates";
}

<head>
    <script src='@Url.Content("~/Scripts/studentValidation.js")' type='text/javascript'></script>
</head>
<body class="body">
    @using (Html.BeginForm("CollectDates", "Student", FormMethod.Post, new { @id = "DateFilterForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
          
            <div class="form-group">
                @Html.LabelFor(model => model.Sdate)
                @Html.TextBoxFor(model => model.Sdate, new { @class = "form-control", type = "date", @id = "fromDate" })
                <span class="error text-danger" id="fromDateError"></span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Edate)
                @Html.TextBoxFor(model => model.Edate, new { @class = "form-control", type = "date", @id = "toDate" })
                <span class="error text-danger" id="toDateError"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Get Students" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

    }
</body>
